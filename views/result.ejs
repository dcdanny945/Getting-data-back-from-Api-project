<!DOCTYPE html>
<html>
<head>
<%- include("partials/header.ejs") %>
</head>
<body>
        <!--Search result-->
        <div class="container mt-5">
          <h1 class="text-center mb-10">Player Search Result</h1>
          <% if(locals.players && locals.players.length > 0 ){%>
            <div class="row row-cols-1 row-cols-md-3 mb-3 mt-5 text-center">
              <% players.forEach(dataFromApi=>{ %>
                <div class="col">
                  <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                      <h4 class="my-0 fw-normal"><%= dataFromApi.team.full_name %></h4>
                    </div>
                    <div class="card-body">
                      <h1 class="card-title pricing-card-title">
                        <%= dataFromApi.first_name %> <%= dataFromApi.last_name %><small class="text-body-secondary fw-light"></small>
                      </h1>
                      <form action="/playerdetails" method="post">
                        <input type="hidden" value= <%=dataFromApi.id%> name="playerId"></input>
                        <button type="submit" class="w-100 btn btn-lg btn-outline-white">View More</button>
                      </form>
                    </div>
                  </div>
                </div>
              <%})%>
          <%}else if(error){%>
            <div class="mt-5 mb-4"> <!--24.05.24 content layout -->
              <h3 class="text-center mt-10"><%=error%> ðŸ˜¢</h3>
            </div>
            <%} else { %>
              <h1>No results found.</h1>
            <% } %>
        </div>
        <!-- footer -->
        <%- include("partials/footer.ejs") %>
      
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>